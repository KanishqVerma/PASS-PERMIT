<% layout("layouts/boilerplate") %>
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh">
  <div class="card signup-box p-4" style="width: 30rem">
    <h3 class="text-center mb-3">Create Account</h3>

    <!-- Signup Form -->
    <form action="/signup" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" placeholder="Enter email" id="email" name="email" required />
      </div>

      <!-- <div class="mb-3">
        <label for="companyID" class="form-label">CompanyId</label>
        <input type="companyID" name="compID" class="form-control" id="companyID" placeholder="Enter CompanyId" />
      </div> -->

      <div class="mb-3">
        <label for="password" class="form-label">Create new Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="New Password" required />
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required />
      </div>

      <button type="submit" class="btn text-white w-100" style="background-color: #0059b3">Signup</button>
    </form>

    <p class="text-center mt-3">Already signed up? <a href="/login" class="text-decoration-none" style="color: #0059b3">Login</a></p>
  </div>
</div>

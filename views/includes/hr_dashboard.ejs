<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <!-- Welcome Section -->
  <div class="card border-0 shadow-lg mb-5" style="background: linear-gradient(135deg, #4e73df, #224abe); color: white">
    <div class="card-body d-flex justify-content-between align-items-center p-5">
      <div>
        <h3 class="fw-bold mb-3">Welcome, HR Manager <i class="fa-solid fa-hand-wave"></i></h3>
        <p class="mb-0 fs-5">Hereâ€™s the list of passes you have issued.</p>
      </div>
      <a href="/hrfind" class="btn btn-light fw-semibold px-4 py-3 rounded-pill shadow-sm"> <i class="fa-solid fa-ticket me-2"></i> Issue a Pass </a>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm text-center p-4">
        <i class="fa-solid fa-list-check text-primary fs-1 mb-3"></i>
        <h5 class="fw-bold mb-2">Total Passes Issued</h5>
        <p class="fs-4 fw-semibold text-dark mb-0"><%= totalPasses %></p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm text-center p-4">
        <i class="fa-solid fa-circle-check text-success fs-1 mb-3"></i>
        <h5 class="fw-bold mb-2">Active Passes</h5>
        <p class="fs-4 fw-semibold text-dark mb-0"><%= activePasses %></p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm text-center p-4">
        <i class="fa-solid fa-circle-xmark text-danger fs-1 mb-3"></i>
        <h5 class="fw-bold mb-2">Expired Passes</h5>
        <p class="fs-4 fw-semibold text-dark mb-0"><%= expiredPasses %></p>
      </div>
    </div>
  </div>

  <!-- Pass Table -->
  <div class="card border-0 shadow-sm mb-5">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="fw-bold mb-0"><i class="fa-solid fa-ticket me-2"></i> Issued Passes</h5>
        <button class="btn btn-outline-primary btn-sm px-3 py-2"><i class="fa-solid fa-rotate me-1"></i> Refresh</button>
      </div>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-primary text-dark">
            <tr>
              <th class="py-3">Issued For</th>
              <th class="py-3">Valid From</th>
              <th class="py-3">Valid Upto</th>
              <th class="py-3 text-center">See Pass</th>
            </tr>
          </thead>
          <tbody>
            <% passes.forEach(pass=>{%>
            <tr>
              <td class="py-3"><%= pass.userId.name %></td>
              <td class="py-3"><%= pass.validFrom.toISOString().split("T")[0]%></td>
              <td class="py-3"><%= pass.validUpto.toISOString().split("T")[0] %></td>
              <td class="py-3 text-center">
                <a href="#" class="btn btn-sm <%=pass.status === 'Active'?'btn-primary':'btn-secondary'%> rounded-pill px-3 py-2"> <i class="fa-solid fa-download me-1"></i> Download </a>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


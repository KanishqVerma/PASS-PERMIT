<section class="hero-section d-flex align-items-center">
  <div class="container">
    <div class="row align-items-center text-white">
      <!-- Left: Text Content -->
      <div class="col-md-6 mb-4 g-5 mb-md-0 text-center text-md-start">
        <h1 class="fw-bold mb-3 display-5">Digital Pass<br />Management System</h1>
        <p class="mb-4 fs-5">Secure, efficient, and digitally signed airport passes with QR<br />code verification for seamless access control.</p>
        <div class="d-flex flex-column flex-sm-row justify-content-center justify-content-md-start">
          <a href="/process" class="btn btn-outline-light fw-semibold me-sm-3 mb-2 mb-sm-0">Apply for Pass</a>
          <% if (currUser){ %> <% if(currUser.role==="hr"){%>
          <a href="/hr/dashboard/<%= currUser._id %>" class="btn btn-outline-light fw-semibold">HR Dashboard</a>
          <% } %> <% if(currUser.role==="user"){%>
          <a href="/dashboard/<%= currUser._id %>" class="btn btn-outline-light fw-semibold">User Dashboard</a>
          <% } %> <% } %>
        </div>
      </div>

      <!-- Right: Tilted Card -->
      <div class="col-md-6 text-center">
        <div class="card p-4 border-0 shadow-lg mx-auto tilted-card" id="passCard">
          <div class="text-center">
            <div class="bg-light rounded-3 p-3 d-inline-block mb-3">
              <i class="fas fa-qrcode fa-2x text-primary"></i>
            </div>
            <h5 class="text-primary fw-semibold">Digital Pass</h5>
            <p class="text-muted small">Secure & Verified</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
